{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeRoots": ["./node_modules/@types", "./src/@types"]
}
